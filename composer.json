{
  "name": "php-boilerplate",
  "description": "A lean, mean MVC machine with routing. It uses Twig for Views, Sass for CSS and Typescript for JS.",
  "version": "0.0.1",
  "require": {
    "twig/twig": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.3",
    "phpunit/dbunit": "^3.0"
  },
  "autoload": {
    "exclude-from-classmap": [
      "app/views/"
    ],
    "classmap": [
      "app/",
      "bootstrap/",
      "core/"
    ]
  }
}
