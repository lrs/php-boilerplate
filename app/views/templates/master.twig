<html lang="en-GB">

  {% include 'partials/head.twig' %}

  <body>
    <header>
      {% include 'partials/menu.twig' %}
    </header>

    {% block jumbotron %}
    {% endblock %}

    <div class="content">
      <section>
        <h2 class="content-heading">{% block title %}{% endblock %}</h2>

