{% extends 'templates/master.twig' %}

{% block jumbotron %}
{% endblock %}

{% block title %}
  Post
{% endblock %}

{% block content %}
  <div class="col-lg-12">
    <article class="card">
        {% if post %}
          <section class="card-block">
            <h2 class="card-title">{{ post.title }}</h2>
            <p class="card-text">{{ post.content }}</p>
          </section>
          <section class="card-footer">
            <p>{{ post.author }}</p>
          </section>
        {% else %}
          <section class="card-block">
            <h2 class="card-title text-warning">No Post Found!</h2>
          </section>
        {% endif %}
    </article>
  </div>
{% endblock %}
